@model Aluno // Formulário tipado do tipo aluno

<h4>Preencha os dados</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"> @* Ação do formulário apontando para a controller Create*@ 
            <div class="form-group">
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="DataNascimento" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="EmailConfirmacao" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="Avaliacao" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="Ativo" class="form-check-input" />
            </div>

            <input type="submit" value="Enviar" class="btn btn-info" />
        </form>
    </div>
</div>
